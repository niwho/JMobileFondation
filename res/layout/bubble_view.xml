<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical" android:background="@drawable/bg1"
	android:paddingLeft="5dip" android:paddingTop="0dip"
	android:paddingRight="5dip" android:paddingBottom="5px">
	
	<LinearLayout android:orientation="horizontal" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
      <TextView android:id="@+id/title" android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_vertical|center_horizontal"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:paddingTop="3px"
		android:textStyle="bold"
		android:textSize="15sp"
		/>
	<ImageView android:id="@+id/imgclose" android:layout_width="fill_parent"
	  android:layout_height="wrap_content" android:src="@drawable/close" android:layout_marginLeft="25dip"
	  android:paddingTop="5px" />
	  
	</LinearLayout>
	<ImageView android:id="@+id/imgline" android:layout_width="wrap_content"
	  android:layout_height="wrap_content" android:src="@drawable/line" />
	<TextView android:id="@+id/text" android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:scrollbars="vertical"
		android:layout_marginLeft="1px"
		android:layout_marginRight="1px"
		android:paddingTop="3px"
		android:paddingBottom="15px"
		 
		android:lines="3"
		android:textSize="10sp"
		/>
</LinearLayout>
